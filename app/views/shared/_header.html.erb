<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to t("sample_app.index.sample_app"), root_path, id: "logo" %>
    <nav>
      <ul class="nav nvabar-nav navbar-right " style="display:flex">
        <li><%= link_to t("sample_app.index.home"), root_path %></li>
        <li><%= link_to t("sample_app.index.help"), help_path %></li>
        <% if logged_in? %>
          <li><%= link_to t("sample_app.index.users"), current_user %></li>
          <li class="dropdown">
            <%= link_to "#", class: "dropdown-toggle", "data-toggle": "dropdown" do %>
              <%=t "sample_app.index.account" %>
              <b class="caret"></b>
            <% end %>
            <ul class="dropdown-menu">
              <li><%= link_to t("sample_app.index.profile"), current_user %></li>
              <li><%= link_to t("sample_app.index.settings"), "#" %></li>
              <li class="divider"></li>
              <li> <%= link_to t("sample_app.index.log_out"), logout_path, method: :delete %></li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to t("sample_app.index.log_in"), login_path %></li>
        <% end %>
        <li class="dropdown">
          <%= link_to "#", class: "dropdown-toggle", "data-toggle": "dropdown" do %>
            <%= t "sample_app.index.languages" %>
            <b class="caret"></b>
          <% end %>
          <ul class="dropdown-menu">
            <li><%= link_to t("sample_app.index.en"), locale: :en %></li>
            <li><%= link_to t("sample_app.index.vi"), locale: :vi %></li>
          </ul>
        </li>
      </ul>
    </nav>
  </div>
</header>
