<% provide :title, t("sample_app.index.log_in") %>
<h1><%= t "sample_app.index.log_in" %></h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for :session, url: login_path do |f| %>
      <%= f.label :email %>
      <%= f.email_field :email, class: "form-control" %>
      <%= f.label :password, t("sample_app.index.password") %>
      <%= link_to t("password.forgot"), new_password_reset_path %>
      <%= f.password_field :password, class: "form-control" %>
      <%= f.label :remember_me, class: "checkbox inline" do %>
        <%= f.check_box :remember_me %>
        <span><%= t "sample_app.index.remember_me" %></span>
      <% end %>
      <%= f.submit t("sample_app.index.log_in"), class: "btn btn-primary" %>
    <% end %>
    <p><%= t "sample_app.index.new_user?" %><%= link_to t("sample_app.index.sign_up_now!"), new_user_path %></p>
  </div>
</div>
